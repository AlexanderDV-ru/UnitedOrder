extends /headered

block title
	title #{$msgs$.sitename} - #{$msgs$.passwordChanging}

block inHead0
	link(rel='stylesheet', href='/stylesheets/style2.css')

block content
	include /infoElement
	br
	div#changepassword
		form(action="/accounts/management/changepassword/"+data.accountLogin method="post")
			table
				tr
					td(align="right")
						label #{$msgs$.login}
					td(align="left")
						input(type="text" name="login" value=data.accountLogin disabled="disabled")
				tr
					td(align="right")
						label #{$msgs$.password}
					td(align="left")
						input(type="password" name="password" value="")
			input(type="submit" value=$msgs$.changePassword)